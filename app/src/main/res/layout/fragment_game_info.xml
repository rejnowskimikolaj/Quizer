<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.quizer.GameInfoFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:textColor="@color/textPrimary"

        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_info_points_textview"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:layout_marginStart="12dp" />

    <TextView
        android:textColor="@color/textPrimary"

        android:layout_height="wrap_content"
        android:id="@+id/game_info_cash_text_view"
        android:textSize="18sp"
        android:layout_width="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp" />

    <TextView
        android:textColor="@color/textPrimary"

        android:text="@string/cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="14sp"
        android:layout_marginEnd="58dp"
        android:layout_alignBottom="@+id/game_info_cash_text_view"
        android:layout_toStartOf="@+id/game_info_cash_text_view" />
