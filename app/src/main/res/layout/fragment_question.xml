<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.quizer.QuestionFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:id="@+id/fragment_question_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/question_fragment_questionTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp">

        <Button
            android:textColor="@color/answerButtonTextColor"
            android:background="@drawable/answer_button_gradient"
            android:text="Answer A"
            android:layout_height="wrap_content"
            android:id="@+id/question_fragment_answer_a"
            android:textSize="10sp"
            android:layout_width="match_parent"
            android:textAlignment="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:textColor="@color/answerButtonTextColor"
            android:textSize="10sp"

            android:background="@drawable/answer_button_gradient"

            android:text="Answer C"
            android:id="@+id/question_fragment_answer_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:textColor="@color/answerButtonTextColor"
            android:textSize="10sp"
            android:background="@drawable/answer_button_gradient"

            android:text="Answer B"
            android:layout_height="wrap_content"
            android:id="@+id/question_fragment_answer_b"
            android:layout_width="match_parent"
            android:textAlignment="center" />

        <View
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <Button
            android:textColor="@color/answerButtonTextColor"
            android:textSize="10sp"
            android:background="@drawable/answer_button_gradient"

            android:text="Answer D"
            android:layout_height="wrap_content"
            android:id="@+id/question_fragment_answer_d"
            android:layout_width="match_parent"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:text="There will be a question blablablabla?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/question_fragment_questionTextView"
        android:textSize="20sp"
        android:textColor="@color/answerButtonTextColor"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
