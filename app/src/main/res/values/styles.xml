<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/blue_background</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>



    </style>

    <style name="AnswerButton" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/answer_button_gradient</item>
        <item name="android:textSize">32sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/answerButtonTextColor</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/answerButtonTextColor</item>
        <item name="android:colorAccent">@color/answerButtonTextColor</item>

        <item name="android:background">@drawable/black_gradient</item>
    </style>

</resources>
